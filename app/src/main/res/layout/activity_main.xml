<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    tools:context="com.mao.remind_test2.Main.MainActivity">

    <RelativeLayout
        android:background="#abcdef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="寸金"
            android:textColor="#00ff00"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/set"
            android:layout_width="50dp"
            android:layout_height="50sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:background="@drawable/setting" />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <LinearLayout
        android:background="#abcdef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/clock_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/clock_Btn"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/alarm"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/clock_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="闹钟"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/stopwatch_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/stopwatch_Btn"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/stopwatch"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/stopwatch_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秒表"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/chronometer_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/chronometer_Btn"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/chronometer"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/chronometer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计时器"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/today_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/today_Btn"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:background="@drawable/today"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/today_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日程"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
