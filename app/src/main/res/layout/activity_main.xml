<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    android:background="@drawable/background9"
    tools:context="com.mao.remind_test2.Main.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="寸金"
            android:textColor="#00ff00"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/set"
            android:layout_width="50dp"
            android:layout_height="50sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:background="@drawable/setting" />
    </RelativeLayout>
    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150sp"
        android:format12Hour="  现在时间\nyyyy/MM/dd\n  hh:mm:ss"
        android:textColor="#00ff00"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <ImageButton
            android:id="@+id/clock"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:layout_marginBottom="5sp"
            android:background="@drawable/alarm" />
        <ImageButton
            android:id="@+id/stopwatch"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:background="@drawable/stopwatch" />

        <ImageButton
            android:id="@+id/time"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:background="@drawable/chronometer" />

        <ImageButton
            android:id="@+id/today"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:background="@drawable/today" />
    </LinearLayout>


</FrameLayout>
