<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#abcdef">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="寸金日程记录你的每一个重要事件"
        android:layout_gravity="center"
        android:textColor="#e2f5e2"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/num"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="序号"
            android:textSize="20sp"
            android:textColor="#0000ff" />
        <TextView
            android:id="@+id/messub"
            android:layout_height="wrap_content"
            android:layout_width="50dp"
            android:text="主题"
            android:textSize="20sp"
            android:textColor="#0000ff" />
        <TextView
            android:id="@+id/mesbody"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:text="内容"
            android:textSize="20sp"
            android:textColor="#0000ff" />
        <TextView
            android:id="@+id/mesdate"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="时间"
            android:textSize="20sp"
            android:textColor="#0000ff" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/today_result"
        android:background="#8863a35d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/searchtoday"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/search" />

        <ImageButton
            android:id="@+id/addtoday"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/add" />

        <LinearLayout
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/searchtoday"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/inputdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="按时间查找"
                android:textSize="15sp"/>
            <EditText
                android:id="@+id/inputsubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="按主题查询"
                android:textSize="20sp" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>