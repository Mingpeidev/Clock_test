<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#abcdef"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="寸金日程记录你的每一个重要事件"
        android:textColor="#e2f5e2"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="序号"
            android:textColor="#0000ff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/messub"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="主题"
            android:textColor="#0000ff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mesbody"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="内容"
            android:textColor="#0000ff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mesdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textColor="#0000ff"
            android:textSize="20sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/today_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#8863a35d"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20sp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/addtoday"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:background="@drawable/add" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/inputdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="按时间查找"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/inputsubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="按主题查询"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50sp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/searchtoday"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_gravity="center"
                android:background="@drawable/search" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>